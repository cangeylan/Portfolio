@model IEnumerable<ProductCategory>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_ObeliskLayout.cshtml";
}

<!--BANNER-->
<div class="welcomebannerContainer">
    <div class="welcomebanner col-md-5 p-lg-5 mx-auto my-5 ">
        <img class="mb-3" src="https://www.obelisk.be/sites/all/themes/obelisk/logo.png" height="60">
        <p class="lead font-weight-normal" style="color: #e9ecef;">Ontdek de mooiste kleding.</p>
        <a class="btn btn-outline-secondary" href="winkel.html?type=">Shop nu</a>
    </div>
    <video autoplay muted loop>
        <source src="~/video/campaign_video.mp4">
    </video>
</div>
<!--NIEUWS-->
<div class="container startpagina_middle">
    <div class="row featurette">
        <div class="col-md-6" style="text-align: -webkit-right;">
            <h1 class="featurette-heading mt-4" style="font-size: 3em; margin-right: 40px;">Laatste nieuws uit onze winkel</h1>
            <p class="lead" style="width: 300px; margin-top: 80px; font-size: 1.1em; margin-right: 40px;">
                Volg het laatste nieuws uit onze winkel om op de hoogte te blijven van aanbiedingen, aanbiedingen, collecties en alles wat je zou willen weten over Obelisk Fashion ...
            </p>
            <a href="latstenews.html" class="btn btn-dark mt-5" style="margin-right: 40px;">ga naar de nieuwspagina</a>
        </div>
        <div class="col-md-6">
            <img src="https://social.massimodutti.com/paper/wp-content/uploads/2020/09/image_01.jpg" alt="">
        </div>
    </div>
</div>
<!-- SLIDESHOW -->
<div id="myCarousel" class="carousel slide mt-4" data-ride="carousel">
    <div class="carousel-inner" id="categorieen_caousel">
        @{ string state="active";
            foreach (var item in Model)
            {
                <div class="carousel-item @state">
                    <img src="~/img/Obelisk/productCategory/@item.BannerImg" class="d-block w-100 h-100" alt="@item.Name" style=" object-fit: cover;" />
                    <div class="carousel-caption d-none d-md-block">
                        <div class="container">
                            <div class="carousel-caption text-left">
                                <h1>@item.Name</h1>
                                <p>Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
                                <p><a class="btn btn-lg btn-outline-secondary" href="#" role="button">Shop nu</a></p>
                            </div>
                        </div>
                    </div>
                </div>
                state = "";
            }
        }
    </div>
    <a class="carousel-control-prev" href="#myCarousel" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#myCarousel" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
<!--ONTMOET ONS TEAM-->
<div class="container startpagina_middle">
    <div class="container startpagina_middle">
        <div class="row featurette">
            <div class="col-md-6">
                <img width="400" src="https://i.pinimg.com/originals/c3/83/df/c383dfd18bb9a953709b36dbbda3c0c7.jpg" alt="">
            </div>
            <div class="col-md-6" style="text-align: -webkit-right;">
                <h1 class="featurette-heading mt-4" style="font-size: 3em; margin-right: 40px;">Ontmoet<br><span class="text-muted"> ons team</span></h1>
                <p class="lead" style="width: 300px; margin-top: 40px; font-size: 1.1em; margin-right: 40px;">
                    Wij vinden bedrijfskleding een mooie branche om in te werken. Iedereen is trots als er weer een bedrijf door ons van representatieve kleding is voorzien. We beseffen iedere dag dat we samen de klus moeten klaren. Van de mensen die de orders invoeren tot degenen die in het atelier werken, allemaal dragen we ons steentje bij aan een perfect eindresultaat. Ons team staat voor u klaar!
                </p>
                <a class="btn btn-dark mt-5" style="margin-right: 30px;" href="Theteam.html">Lees meer</a>
            </div>

        </div>
    </div>
</div>

