<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Obelisk Fashion</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/homepagina.css" />
</head>
<body class="index">
    <header>
        <nav class="site-header sticky-top py-1" style="display: flex; ">
            <div class="container d-flex flex-column flex-md-row justify-content-between">
                <!-- Startpagina Knop -->
                <a class="py-2 d-none d-md-inline-block" style="margin-bottom:unset; padding-top:1px" asp-controller="Home" asp-action="Index">
                    <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25"  fill="none" stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" class="d-block mb-2" role="img" viewBox="0 0 24 24"><title>Portfolio</title><circle cx="12" cy="12" r="10" /><path d="M14.31 8l5.74 9.94M9.69 8h11.48M7.38 12l5.74-9.94M9.69 16L3.95 6.06M14.31 16H2.83m13.79-4l-5.74 9.94" /></svg>
                </a>
                <a class="py-2" asp-controller="Obelisk" asp-action="Index" aria-label="Product">
                    <svg width="1.8em" height="1.8em" viewBox="0 0 16 16" class="bi bi-house" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M2 13.5V7h1v6.5a.5.5 0 0 0 .5.5h9a.5.5 0 0 0 .5-.5V7h1v6.5a1.5 1.5 0 0 1-1.5 1.5h-9A1.5 1.5 0 0 1 2 13.5zm11-11V6l-2-2V2.5a.5.5 0 0 1 .5-.5h1a.5.5 0 0 1 .5.5z" />
                        <path fill-rule="evenodd" d="M7.293 1.5a1 1 0 0 1 1.414 0l6.647 6.646a.5.5 0 0 1-.708.708L8 2.207 1.354 8.854a.5.5 0 1 1-.708-.708L7.293 1.5z" />
                    </svg>
                </a>
                <a class="py-2 d-none d-md-inline-block">Nieuws</a>
                <a class="py-2 d-none d-md-inline-block">Ons team</a>
                <a class="py-2 d-none d-md-inline-block">Contact</a>
                <a class="nav-link dropdown-toggle py-2 d-none d-md-inline-block" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" asp-controller="Obelisk" asp-action="Shop">Shop</a>
                <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                    @await Component.InvokeAsync("CategoryDropdown",new { maxPriority = 2,isDone = false })
                </div>
                <!-- Zoekbalk -->
                <div class="col-6 pr-0">
                    <a aria-label="Search">
                        <div class="form-inline mt-2 mt-md-0" style="width: 100%;">
                            <input id="zoek" class="form-control mr-sm-0" style="width: 100%;" type="text" placeholder="Zoek een product" aria-label="Search" autocomplete="off">
                        </div>
                    </a>
                </div>
                <a class="py-2 d-none d-md-inline-block" href="javascript:" onclick="zoek()">
                    <svg width="1.3em" height="1.3em" viewBox="0 0 16 16" class="bi bi-search" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M10.442 10.442a1 1 0 0 1 1.415 0l3.85 3.85a1 1 0 0 1-1.414 1.415l-3.85-3.85a1 1 0 0 1 0-1.415z" />
                        <path fill-rule="evenodd" d="M6.5 12a5.5 5.5 0 1 0 0-11 5.5 5.5 0 0 0 0 11zM13 6.5a6.5 6.5 0 1 1-13 0 6.5 6.5 0 0 1 13 0z" />
                    </svg>
                </a>

            </div>
            <div class="col-4 d-flex justify-content-end align-items-center" style="position: sticky; left: 10px;">
                <!-- Winkel Locatie -->
                <a  class="badge mr-3">
                    <svg width="1.6em" height="1.6em" viewBox="0 0 16 16" class="bi bi-geo-alt-fill" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                        <path fill-rule="evenodd" d="M8 16s6-5.686 6-10A6 6 0 0 0 2 6c0 4.314 6 10 6 10zm0-7a3 3 0 1 0 0-6 3 3 0 0 0 0 6z" />
                    </svg>
                </a>
                <!-- Aanmelden Knop -->
                <div class="dropleft">
                    <a class="dropleft badge mr-3 " role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <svg width="1.8em" height="1.8em" viewBox="0 0 16 16" class="bi bi-person" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M10 5a2 2 0 1 1-4 0 2 2 0 0 1 4 0zM8 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm6 5c0 1-1 1-1 1H3s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C11.516 10.68 10.289 10 8 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z" />
                        </svg>
                    </a>
                    <!-- aanmelden dropdpwn -->
                    <div id="aanmelden_dropdown" class="dropdown-menu" data-toggle="dropdown"></div>
                </div>

                <!-- Winkelwagantje Popup -->
                <div class="dropleft" id="dd-link">
                    <a  class="badge mr-3 dropleft" role="button" href="javascript:" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <svg  width="1.8em" height="1.8em" viewBox="0 0 16 16" class="cartIcon bi bi-cart" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                            <path fill-rule="evenodd" d="M0 1.5A.5.5 0 0 1 .5 1H2a.5.5 0 0 1 .485.379L2.89 3H14.5a.5.5 0 0 1 .491.592l-1.5 8A.5.5 0 0 1 13 12H4a.5.5 0 0 1-.491-.408L2.01 3.607 1.61 2H.5a.5.5 0 0 1-.5-.5zM3.102 4l1.313 7h8.17l1.313-7H3.102zM5 12a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm7 0a2 2 0 1 0 0 4 2 2 0 0 0 0-4zm-7 1a1 1 0 1 0 0 2 1 1 0 0 0 0-2zm7 0a1 1 0 1 0 0 2 1 1 0 0 0 0-2z" />
                        </svg>
                        <span id="total_amount"></span>
                    </a>
                    <div class="dropdown-menu winkelwagantje" area-labelledby='wagantje_knop'>
                        <form id="basket" class="px-4 py-3">
                        </form>
                        <div class="col-12">
                            <p>
                                <span id="total_price"></span>
                            </p>
                            <a id="naar_bestellen_knop" class="btn btn-danger col-12"  style="color: white!important;">
                                Afrekenen (in progress)
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    @RenderBody()


    <div class="container">
        <footer class="pt-4 my-md-5 pt-md-5 border-top">
            <div class="row">
                <div class="col-12 col-md">
                    <img class="mb-2" src="https://www.obelisk.be/sites/all/themes/obelisk/logo.png" alt="" width="74">
                    <small class="d-block mb-3 text-muted">© 2017-2020</small>
                </div>
                <div class="col-6 col-md">
                    <h5>Volg ons</h5>
                    <ul class="list-unstyled text-small">
                        <li>
                            <a>
